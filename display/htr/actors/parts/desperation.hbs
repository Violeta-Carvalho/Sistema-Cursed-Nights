    <div class="flexrow field-header">
        <label for="system.desperation.value" class="resource-label">{{localize "WOD5E.HTR.Desperation"}}</label>
    </div>
    <div class="resource resource-content flexrow flex-group-center flex-between">
        <div class="resource-counter editable" data-states="-:value" data-value="{{desperation.value}}" data-name="system.desperation">
            {{#numLoop 5}}
