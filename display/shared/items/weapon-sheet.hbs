<header class="item-header">
    <img class="profile-img" data-action="editImage" src="{{img}}" data-edit="img" title="{{name}}" alt="Item Image" />
    <div class="header-fields">
        <input class="itemname" name="name" type="text" value="{{name}}" placeholder="{{localize 'WOD5E.Name'}}"/>
        <div class="flexrow">
            <!-- Current number of uses -->
            {{#if uses.enabled}}
                <div class="flexcol level flex-center item-resource">
                    <div>
                        <b>{{localize "WOD5E.ItemsList.UsesRemaining"}}</b>
                    </div>
                    <input name="system.uses.current" value="{{uses.current}}" type="number" min="0" max="{{uses.max}}"/>
                </div>
            {{/if}}
            <div class="flexcol level flex-center item-resource">
                <div>
                    <b>
                        {{localize "WOD5E.EquipmentList.Quantity"}}
                    </b>
                </div>
                <input name="system.quantity" value="{{quantity}}" type="number" min="0"/>
            </div>
            <div class="flexcol level flex-center item-resource">
                <div>
                    <b>
                        {{localize "WOD5E.EquipmentList.WeaponValue"}}
                    </b>
                </div>
                <input name="system.weaponvalue" value="{{weaponvalue}}" type="number" min="0"/>
            </div>
        </div>
    </div>
</header>
