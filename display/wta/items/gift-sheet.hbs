<header class="item-header">
    <img class="profile-img" data-action="editImage" src="{{img}}" data-edit="img" title="{{name}}" alt="Item Image" />
    <div class="header-fields">
        <input class="itemname" name="name" type="text" value="{{name}}" placeholder="{{localize 'WOD5E.Name'}}"/>
        <div class="flexrow">
            <!-- Input the level of the gift -->
            <div class="flexcol level flex-center item-resource">
                <div>
                    <b>
                        {{localize "WOD5E.Level"}}
                    </b>
                </div>
                <input name="system.level" value="{{level}}" type="number" min="0" max="5"/>
            </div>
            <div class="flexcol flex-center item-resource">
                <div>
                    <b>{{localize 'WOD5E.WTA.RageCost'}}</b>
                </div>
                <input name="system.cost" type="number" value="{{cost}}" placeholder="0"/>
            </div>
            <div class="flexcol flex-center item-resource">
                <div>
                    <b>{{localize 'WOD5E.WTA.WillpowerCost'}}</b>
                </div>
                <input name="system.willpowercost" type="number" value="{{willpowercost}}" placeholder="0"/>
            </div>
        </div>
    </div>
</header>
