    <label for="actor.system.renown.wisdom.value" class="resource-label rollable field-header" data-action="roll" data-value-paths="renown.wisdom.value"
        data-renown="wisdom" data-select-dialog="true">
        {{localize "WOD5E.WTA.Wisdom"}}
