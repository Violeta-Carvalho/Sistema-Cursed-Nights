<div class="flexrow grid grid-3col renown">
  <!-- Glory-->
  <div class="flex-group-center glory-value">
    <label for="actor.system.renown.glory.value" class="resource-label rollable field-header" data-action="roll" data-value-paths="renown.glory.value"
        data-renown="glory" data-select-dialog="true">
        {{localize "WOD5E.WTA.Glory"}}
        <i class="fa-solid fa-dice-d10"></i>
    </label>
    <div class="resource-content flexrow flex-center flex-between">
        <div class="resource-value" data-value="{{renown.glory.value}}" data-name="system.renown.glory.value">
            <span class="resource-value-empty glory-value" data-action="dotCounterEmpty"></span>
            {{#numLoop 5}}
                <span class="resource-value-step glory-value" data-action="dotCounterChange" data-index="{{this}}"></span>
            {{/numLoop}}
        </div>
    </div>
  </div>
  <!-- Honor -->
